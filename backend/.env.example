# Copy this file to .env and set the values before running the backend.

# Firebase / Google Cloud project configuration
FIREBASE_PROJECT_ID=""
FIREBASE_DEFAULT_TENANT_ID="default"

# Option 1: path to the downloaded service account key JSON file
GOOGLE_APPLICATION_CREDENTIALS="firebase-service-account.json"

# Option 2: base64-encoded service account JSON (takes precedence if populated)
FIREBASE_SERVICE_ACCOUNT_BASE64=""

# If you use the Firestore emulator, set the host (e.g., localhost:8080)
FIRESTORE_EMULATOR_HOST=""
